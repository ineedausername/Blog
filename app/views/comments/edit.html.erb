<h1>Edit Comment</h1>

<%= form_for [@author, @article, @comment] do |f| %>

  <p> Comment in Article: <%= @article.title %></p>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :body %><br />
    <%= f.text_area  :body %>
  </div>
  <div class="actions">
    <%= f.submit "Save" %>
  </div>
<% end %>

<%= link_to 'Back', author_article_path(@author, @article) %>
